{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build_stack_function",
            "type": "shell",
            "command": "clang",
            "args": [
                "-g",
                "${workspaceFolder}/stack/stack.c",
                "${file}",
                "-I",
                "${workspaceFolder}/stack",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build_linklist",
            "type": "shell",
            "command": "clang",
            "args": [
                "-g",
                "${workspaceFolder}/ds_outline/node.c",
                "${file}",
                "-I",
                "${workspaceFolder}/ds_outline",
                "-o",
                "${workspaceFolder}/test"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}